<%= form_for(@tag) do |f| %>
  <div style='width: 200px'>
     <div class="form-group">
      <%= f.label :name, ("name".titlecase + " <span class='error'>" + @tag.errors[:name].join(", ") + "</span>").html_safe %>
      <%= f.text_field :name, :class => "form-control", :autofocus => true %>
    </div>
    <div class="form-group">
      <%= f.label :category, ("Category".titlecase + " <span class='error'>" + @tag.errors[:name].join(", ") + "</span>").html_safe %>
      <%= f.text_field :category, :class => "form-control", :id => "tags" %>
    </div>
   
    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>



