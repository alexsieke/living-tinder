<h3>Displaying Tags</h3>
<p>Description Goes Here</p>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.category %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Add a New Tag</h3>
<%= render "tags/form" %>

<script>
  $(function() {
    var availableTags = <%= @categories.to_json %>;
    $( "#tags" ).autocomplete({
      source: availableTags
    });
  });
  </script>